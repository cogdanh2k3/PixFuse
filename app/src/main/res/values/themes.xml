<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pixfuse" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/red_600</item>
        <!-- Customize your theme here. -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorError">@color/black</item>
        <item name="android:windowBackground">@color/game_background</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="colorAccent">@color/purple_700</item>
    </style>

    <!-- Fullscreen theme for game activities -->
    <style name="FullscreenTheme" parent="Theme.Pixfuse">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:immersive">true</item>
    </style>

    <!-- Button style -->
    <style name="ButtonStyle">
        <item name="android:minWidth">200dp</item>
        <item name="android:minHeight">60dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">8dp</item>
    </style>

    <!-- Text style -->
    <style name="TextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>
</resources>